pipeline{
    agent {
        node {
            label 'docker-python-template'
        }
    }
    triggers {
        githubPush()
    }
    
    stages {
        stage('build') {
            steps {
                python3 hello.py
            }
        }
        stage('test') {
            steps {
                echo "testing...."
            }
        }
        stage('deploy') {
            steps {
                echo "deploying...."
            }
        }
    }
}